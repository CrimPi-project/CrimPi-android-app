<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Transparent fill for the inside of the rectangle -->
    <solid android:color="@color/primary_navy" />
    <!-- Stroke (outline) color and width -->
    <stroke
        android:width="2dp"
    android:color="@color/purple_200" /> <!-- Using accent_blue_light for the outline color -->
    <!-- Optional: Add rounded corners if desired -->
    <corners android:radius="16dp" />
</shape>
