<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CrimPi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_dark_navy</item>
        <item name="colorPrimaryVariant">@color/background_dark_navy</item>
        <item name="colorOnPrimary">@color/background_dark_navy</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_text_color</item>
        <item name="colorSecondaryVariant">@color/primary_text_color</item>
        <item name="colorOnSecondary">@color/primary_text_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButton</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="DeviceListEntryText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white
        </item> <!-- Ensure background is white if not already from dialog_holo_light_frame -->
        <item name="android:padding">16dp</item> <!-- Matches padding in Java code -->
        <item name="android:textSize">16sp</item> <!-- Matches text size in Java code -->
    </style>

    <style name="AlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="AlertDialogTransparent" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true
        </item> <!-- Keep dimming effect behind dialog -->
        <item name="android:backgroundDimAmount">0.6
        </item> <!-- Adjust dimming amount (0.0 to 1.0) -->
        <!-- Ensure dialog buttons still use the AlertDialogButton style -->
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButton</item>
    </style>

    <style name="NavigationViewSectionHeader" parent="Widget.Design.NavigationView">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">22sp</item> <!-- Increased size -->
        <item name="android:textStyle">bold</item> <!-- Make it bold for emphasis -->
        <item name="android:paddingTop">16dp</item> <!-- Add some top padding -->
        <item name="android:paddingBottom">8dp</item> <!-- Add some bottom padding -->
        <item name="android:listDivider">@drawable/drawer_divider
        </item> <!-- ADDED: Custom divider drawable -->
        <item name="android:layoutDirection">ltr</item> <!-- Ensure LTR for icons -->
    </style>

    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/primary_navy</item>
        <item name="itemTextColor">@color/primary_text_color</item>
        <item name="itemIconTint">@color/primary_text_color</item>
        <item name="itemHorizontalPadding">16dp</item>
        <item name="itemIconPadding">8dp</item>
        <item name="android:listDivider">@color/purple_200
        </item> <!-- ADDED: Custom divider drawable -->
        <item name="android:dividerHeight">1dp</item>
        <item name="android:layoutDirection">ltr</item> <!-- Ensure LTR for icons -->
    </style>

    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/accent_blue_light_translucent</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">visible</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:elevation">0dp</item>
    </style>

</resources>

