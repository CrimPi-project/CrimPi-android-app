<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark_navy">

    <!-- Overall Timer Container (Now explicitly for Exercise Countdown, top right) -->
    <RelativeLayout
        android:id="@+id/top_right_timer_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layoutDirection="ltr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/timerCustomWorkoutIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/timer_icon_desc"
            android:src="@drawable/ic_timer_24"
            app:tint="@color/primary_text_color"
            android:visibility="visible" />

        <TextView
            android:id="@+id/timerCustomWorkoutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/timerCustomWorkoutIcon"
            android:layout_toStartOf="@id/timerCustomWorkoutIcon"
            android:text="@string/zero"
            android:textColor="@color/primary_text_color"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>


    <!-- RelativeLayout to contain the weight number and the "kg" unit -->
    <RelativeLayout
        android:id="@+id/weightCustomWorkoutDisplayContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layoutDirection="ltr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Freestyle Received Number TextView (Main weight number) -->
        <TextView
            android:id="@+id/forceCustomWorkoutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/n_a"
            android:textColor="@color/primary_text_color"
            android:textSize="80sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <!-- TextView for "kg" unit -->
        <TextView
            android:id="@+id/unitKgCustomWorkoutTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/forceCustomWorkoutTextView"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/forceCustomWorkoutTextView"
            android:text="@string/kg"
            android:textColor="@color/primary_text_color"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </RelativeLayout>

    <!-- Removed belowTargetTextView as per request -->

    <!-- Existing Body Percentage TextView - Now used for Min Body Percentage -->
    <TextView
        android:id="@+id/bodyPercentageCustomWorkoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/body_percentage"
        android:textColor="@color/primary_text_color"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightCustomWorkoutDisplayContainer" /> <!-- CORRECTED constraint -->


    <!-- Primary Status (Set X/Y - Exercise Z/W or Rest Status) -->
    <TextView
        android:id="@+id/primary_status_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/status"
        android:textColor="@color/primary_text_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bodyPercentageCustomWorkoutTextView" />

    <!-- Secondary Status (Exercise Description x Reps (Min Body: Z%)) -->
    <TextView
        android:id="@+id/secondary_status_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/secondary_status"
        android:textColor="@color/primary_text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/primary_status_text_view" />


    <!-- Force Bar Container (Acts as the track for the dynamic line) -->
    <View
        android:id="@+id/forceBarCustomWorkoutTrack"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.7"
        android:background="@drawable/force_track_outline"
        android:paddingBottom="4dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondary_status_text_view" />

    <!-- Force Bar (The dynamic horizontal line that moves up and down) -->
    <View
        android:id="@+id/forceBarCustomWorkout"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/accent_blue_light"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/forceBarCustomWorkoutTrack"
        app:layout_constraintEnd_toEndOf="@id/forceBarCustomWorkoutTrack"
        app:layout_constraintStart_toStartOf="@id/forceBarCustomWorkoutTrack" />

    <!-- Target Line (Static horizontal line set by user) -->
    <View
        android:id="@+id/targetLineCustomWorkout"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/text_light_gray"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/forceBarCustomWorkoutTrack"
        app:layout_constraintEnd_toEndOf="@id/forceBarCustomWorkoutTrack"
        app:layout_constraintStart_toStartOf="@id/forceBarCustomWorkoutTrack" />

    <!-- Rest Countdown Timer (Centered) -->
    <TextView
        android:id="@+id/rest_timer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resttimer"
        android:textColor="@color/primary_text_color"
        android:textSize="100sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
