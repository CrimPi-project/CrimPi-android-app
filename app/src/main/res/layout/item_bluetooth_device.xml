<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_corner_item_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:layout_marginTop="12dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <!-- Device Logo (e.g., CrimPi Logo) -->
    <ImageView
        android:id="@+id/deviceLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/device_logo"
        android:src="@drawable/ic_crimpi_logo"
        app:tint="@color/primary_text_color" />

    <!-- Device Name -->
    <TextView
        android:id="@+id/deviceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/crimpi_device_name"
        android:textColor="@color/primary_text_color"
        android:textSize="18sp"
        android:textStyle="bold" /> <!-- Placeholder text -->
</LinearLayout>
