<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark_navy"
    tools:context=".MainActivity">

    <!-- Top Bar with Horizontal Line and Bluetooth Icon -->
    <RelativeLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <!-- Removed horizontal padding from here to allow the line to go full width -->

        <!-- Bluetooth Icon Button (Top Left) -->
        <ImageButton
            android:id="@+id/bluetoothButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="7dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/bluetooth_scan"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bluetooth_white"
            app:tint="@color/primary_text_color" />

        <!-- Horizontal Line - Now spans full width -->
        <View
            android:id="@+id/topLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/bluetoothButton"
            android:layout_marginTop="8dp"
            android:background="@color/purple_200" />

    </RelativeLayout>

    <!-- Central Content Area - FrameLayout to swap between Logo/Text and Number -->
    <FrameLayout
        android:id="@+id/centralContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBarLayout"
        android:layout_centerHorizontal="true"
        android:padding="16dp">

        <!-- Disconnected State: Central Logo/Icon - Increased size and adjusted margin to move it up -->
        <ImageView
            android:id="@+id/centralLogoImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="180dp"
            android:contentDescription="@string/crimpi_logo"
            android:src="@drawable/ic_crimpi_logo"
            android:visibility="visible"
            app:tint="@color/primary_text_color" />

        <!-- Disconnected State: Instruction Text - Adjusted margin to be below the logo -->
        <TextView
            android:id="@+id/instructionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="300dp"
            android:gravity="center"
            android:text="@string/crimpi_connect"
            android:textColor="@color/primary_text_color"
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <!-- Connected State: Received Number Display -->
        <TextView
            android:id="@+id/receivedNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/n_a"
            android:textColor="@color/white"
            android:textSize="80sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Connected State: Unit Text (e.g., "C" for Celsius) -->
        <TextView
            android:id="@+id/unitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="120dp"
            android:layout_marginTop="20dp"
            android:text="units"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="normal"
            android:visibility="gone" />

    </FrameLayout>

</RelativeLayout>
