<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark_navy"
    tools:context=".fragments.FreestyleWorkoutFragment">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layoutDirection="ltr">

        <ImageView
            android:id="@+id/timerIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/timer_icon_desc"
            android:src="@drawable/ic_timer_24"
            app:tint="@color/primary_text_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/timerIcon"
            android:layout_toStartOf="@id/timerIcon"
            android:text="@string/zero"
            android:textColor="@color/primary_text_color"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>


    <!-- RelativeLayout to contain the weight number and the "kg" unit -->
    <RelativeLayout
        android:id="@+id/weightDisplayContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layoutDirection="ltr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Freestyle Received Number TextView (Main weight number) -->
        <TextView
            android:id="@+id/forceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/n_a"
            android:textColor="@color/primary_text_color"
            android:textSize="80sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- TextView for "kg" unit -->
        <TextView
            android:id="@+id/unitKgTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/forceTextView"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/forceTextView"
            android:text="@string/kg"
            android:textColor="@color/primary_text_color"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>

    <!-- NEW: Body Percentage TextView - Placed below weightDisplayContainer -->
    <TextView
        android:id="@+id/bodyPercentageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/n_a"
        android:textColor="@color/primary_text_color"
        android:textSize="26sp"
        android:textStyle="normal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/forceBarTrack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightDisplayContainer"
        app:layout_constraintVertical_chainStyle="packed" />


    <!-- Force Bar Container (Acts as the track for the dynamic line) -->
    <View
        android:id="@+id/forceBarTrack"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.7"
        android:background="@drawable/force_track_outline"
        android:paddingBottom="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bodyPercentageTextView" /> <!-- Updated constraint -->

    <!-- Force Bar (The dynamic horizontal line that moves up and down) -->
    <View
        android:id="@+id/forceBar"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/accent_blue_light"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/forceBarTrack"
        app:layout_constraintEnd_toEndOf="@id/forceBarTrack"
        app:layout_constraintStart_toStartOf="@id/forceBarTrack" />

    <!-- Target Line (Static horizontal line set by user) -->
    <View
        android:id="@+id/targetLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/text_light_gray"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/forceBarTrack"
        app:layout_constraintEnd_toEndOf="@id/forceBarTrack"
        app:layout_constraintStart_toStartOf="@id/forceBarTrack" />

    <!-- Horizontal LinearLayout to contain the two buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Start/Stop Workout Button -->
        <Button
            android:id="@+id/startButton"
            style="@style/RoundedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_workout"
            android:visibility="visible" />

    </LinearLayout>

    <!-- Countdown TextView (Initially Hidden, centered) -->
    <TextView
        android:id="@+id/countdownTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/countdown_start"
        android:textColor="@color/primary_text_color"
        android:textSize="100sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
