<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark_navy"
    tools:context=".fragments.FreestyleWorkoutFragment">

    <!-- Freestyle Received Number TextView (Top Center) -->
    <TextView
        android:id="@+id/freestyleReceivedNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/n_a"
        android:textColor="@color/primary_text_color"
        android:textSize="80sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Force Bar Container (Acts as the track for the dynamic line) -->
    <View
        android:id="@+id/forceBarTrack"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:background="@drawable/force_track_outline"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.7"
        android:paddingBottom="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/freestyleReceivedNumberTextView" />

    <!-- Force Bar (The dynamic horizontal line that moves up and down) -->
    <View
        android:id="@+id/forceBar"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/accent_blue_light"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/forceBarTrack"
        app:layout_constraintEnd_toEndOf="@id/forceBarTrack"
        app:layout_constraintStart_toStartOf="@id/forceBarTrack" />

    <!-- Start Button (Bottom Center) -->
    <Button
        android:id="@+id/startButton"
        style="@style/RoundedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/start_workout"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Countdown TextView (Initially Hidden, centered) -->
    <TextView
        android:id="@+id/countdownTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/countdown_start"
        android:textColor="@color/primary_text_color"
        android:textSize="100sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
